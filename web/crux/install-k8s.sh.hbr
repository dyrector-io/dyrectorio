#!/bin/sh
set -e

{{#if localManifests }}
kubectl apply -f ./agent/manifest/kubernetes/namespace.yaml
{{else}}
kubectl apply -f https://raw.githubusercontent.com/dyrector-io/dyrectorio/feat/k8s-agent-install/agent/manifest/kubernetes/rolebinding.yaml
{{/if }}

cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: ConfigMap
metadata:
  name: crane-config
  namespace: dyrectorio
data:
  CRANE_IN_CLUSTER: "true"
  INGRESS_ROOT_DOMAIN: "test.test.te"
  GRPC_TOKEN: "{{token}}"
  HOSTNAME: "{{name}}"
EOF

{{#if localManifests }}
kubectl apply -f ./agent/manifest/kubernetes/rolebinding.yaml
kubectl apply -f ./agent/manifest/kubernetes/deployment.yaml
{{else}}
https://raw.githubusercontent.com/dyrector-io/dyrectorio/feat/k8s-agent-install/agent/manifest/kubernetes/rolebinding.yaml
https://raw.githubusercontent.com/dyrector-io/dyrectorio/feat/k8s-agent-install/agent/manifest/kubernetes/depyloyment.yaml
{{/if }}
