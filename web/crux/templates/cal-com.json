{
  "name": "cal.com",
  "description": "The open-source Calendly alternative.\nCal.com is the event-juggling scheduler for everyone. Focus on meeting, not making meetings. Free for individuals.\n\nBefore deployment make sure to set the 'POSTGRES_PASSWORD' secret and update the 'DATABASE_URL' with the password, as well as set the 'NEXTAUTH_SECRET' and 'CALENDSO_ENCRYPTION_KEY' secrets to a secure random string (16-32 characters should suffice, for example use 'openssl rand -base64 32').\n\nBy default the application will run on 'http://localhost:7000'. If you have a node with Traefik enabled you can use 'http://cal.localhost' (or any other domain setup in the ingress settings) by setting 'NEXT_PUBLIC_WEBAPP_URL' to the public URL.",
  "registries": [
    {
      "name": "Docker Hub Library",
      "type": "hub",
      "hub": {
        "imageNamePrefix": "library"
      }
    },
    {
      "name": "dyrector.io Docker Hub Library",
      "type": "hub",
      "hub": {
        "imageNamePrefix": "dyrectorio"
      }
    }
  ],
  "images": [
    {
      "name": "cal-db",
      "registryName": "Docker Hub Library",
      "image": "postgres",
      "tag": "latest",
      "config": {
        "name": "cal-db",
        "tty": false,
        "volumes": [
          {
            "name": "database-data",
            "path": "/var/lib/postgresql/data/"
          }
        ],
        "environment": [
          {
            "key": "POSTGRES_DB",
            "value": "cal-db"
          },
          {
            "key": "POSTGRES_USER",
            "value": "cal-user"
          }
        ],
        "secrets": [
          {
            "key": "POSTGRES_PASSWORD",
            "required": true
          }
        ],
        "networks": [
          "cal-com-network"
        ],
        "networkMode": "bridge",
        "restartPolicy": "unless_stopped",
        "deploymentStrategy": "recreate"
      }
    },
    {
      "name": "cal-com",
      "registryName": "dyrector.io Docker Hub Library",
      "image": "cal-com",
      "tag": "v2.5.10",
      "config":
      {
        "name": "cal-com",
        "tty": false,
        "networks": [
          "cal-com-network"
        ],
        "expose": "expose",
        "ingress": {
          "host": "localhost",
          "name": "cal"
        },
        "ports": [
          {
            "external": 7000,
            "internal": 7000
          }
        ],
        "networkMode": "bridge",
        "restartPolicy": "unless_stopped",
        "deploymentStrategy": "recreate", 
        "environment": [
          {
            "key": "NEXT_PUBLIC_WEBAPP_URL",
            "value": "http://localhost:7000/"
          },
          {
            "key": "PORT",
            "value": "7000"
          },
          {
            "key": "NEXT_PUBLIC_LICENSE_CONSENT",
            "value": ""
          },
          {
            "key": "CALCOM_TELEMETRY_DISABLED",
            "value": "1"
          },
          {
            "key": "DATABASE_URL",
            "value": "postgresql://cal-user:${POSTGRES_PASSWORD}@cal-com-cal-db/cal-db"
          }
        ],
        "secrets": [
          {
            "key": "NEXTAUTH_SECRET",
            "required": true
          },
          {
            "key": "CALENDSO_ENCRYPTION_KEY",
            "required": true
          }
        ]
      }
    }
  ]
}
