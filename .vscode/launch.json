{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start web/crux debug session",
            "args": [
                "${workspaceFolder}/web/crux/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/web/crux/.env",
            "cwd": "${workspaceRoot}/web/crux",
            "console": "integratedTerminal",
        },
        {
            "name": "Launch dagent",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/golang/cmd/dagent",
            "cwd": "${workspaceFolder}/golang/cmd/dagent"
        },

         {
            "name": "Launch crane",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/golang/cmd/crane"
        },

        {
            "name": "Launch CLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "up"
            ],
            "program": "${workspaceFolder}/cli",
            "cwd": "${workspaceFolder}/cli"
        },
        {
            "name": "Debug dagent",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/golang/cmd/dagent",
            "cwd": "${workspaceFolder}/golang/cmd/dagent"
        },

        {
            "name": "Debug crane",
            "type": "go",
            "request": "launch",
            "buildFlags": "",
            "mode": "debug",
            "program": "${workspaceFolder}/golang/cmd/crane",
            "cwd": "${workspaceFolder}/golang/cmd/crane"
        },

        {
            "name": "Debug crane init",
            "type": "go",
            "request": "launch",
            "buildFlags": "",
            "mode": "debug",
            "program": "${workspaceFolder}/golang/cmd/crane",
            "cwd": "${workspaceFolder}/golang/cmd/crane",
            "args": ["init"]
        },

        {
            "name": "Debug CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": [
                "up"
            ],
            "program": "${workspaceFolder}/golang/cmd/dyo",
            "cwd": "${workspaceFolder}/golang/cmd/dyo"
        },
    ]
}
