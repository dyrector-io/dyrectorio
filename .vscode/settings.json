{
    "go.buildFlags": ["-tags=unit,integration"],
    "go.testTimeout": "300s",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/CVS": true,
        "**/node_modules": true
    },
    "eslint.workingDirectories": ["web/crux", "web/crux-ui"],
    "gopls": {
        "formatting.gofumpt": true
    },
    "go.lintTool": "golangci-lint",
    "go.lintFlags": ["--fast", "-c", "$workspace/golangci.yml"],
    "[yaml]": {
        "editor.defaultFormatter": "bluebrown.yamlfmt"
    },
    "makefile.configureOnOpen": false
}
