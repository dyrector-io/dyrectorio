http:
  routers:
    crux-ui:
      rule: {{.HostRules}}
      service: crux-ui
      entryPoints:
        - web

    crux-http:
      rule: ({{.HostRules}}) && (PathPrefix(`/api`) && !PathPrefix(`/api/auth`) && !PathPrefix(`/api/status`))
      service: crux-http
      entryPoints:
        - web

    crux-grpc:
      rule: ({{.HostRules}}) && Headers(`content-type`, `application/grpc`)
      service: crux-grpc
      entryPoints:
        - web

  services:
    crux-ui:
      loadBalancer:
        servers:
          - url: http://{{.InternalHost}}:{{.CruxUIPort}}

    crux-http:
      loadBalancer:
        servers:
          - url: http://{{.InternalHost}}:{{.CruxPort}}

    crux-grpc:
      loadBalancer:
        servers:
          - url: h2c://{{.InternalHost}}:5000

